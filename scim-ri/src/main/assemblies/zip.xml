<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
    <formats>
        <format>zip</format>
        <format>dir</format>
    </formats>
    <fileSets>
        <fileSet>
            <outputDirectory>server</outputDirectory>
            <directory>${project.basedir}/src/main/assemblies/server</directory>
            <includes>
                <include>*.txt</include>
                <include>ldif/*</include>
                <include>config/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>server/tools</outputDirectory>
            <directory>${project.basedir}/src/main/assemblies/server/tools</directory>
            <includes>
                <include>*.bat</include>
            </includes>
            <lineEnding>crlf</lineEnding>
        </fileSet>
        <fileSet>
            <outputDirectory>server/tools</outputDirectory>
            <directory>${project.basedir}/src/main/assemblies/server/tools</directory>
            <excludes>
                <exclude>*.bat</exclude>
            </excludes>
            <lineEnding>lf</lineEnding>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>server/config</outputDirectory>
            <directory>${project.basedir}/../scim-ldap/src/main/resources/com/unboundid/scim/ldap</directory>
            <includes>
                <include>*.xsd</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>client</outputDirectory>
            <directory>${project.basedir}/src/main/assemblies/client</directory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>client/src/main/java</outputDirectory>
            <directory>${project.basedir}/src/main/java</directory>
            <includes>
                <include>com/unboundid/scim/ri/client/*.java</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>server/lib</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
        </dependencySet>
    </dependencySets>
</assembly>