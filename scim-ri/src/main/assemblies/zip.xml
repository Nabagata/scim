<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <outputDirectory />
            <directory>${project.basedir}/src/main/assemblies</directory>
            <includes>
                <include>*.txt</include>
                <include>ldif/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>tools</outputDirectory>
            <directory>${project.basedir}/src/main/assemblies/tools</directory>
            <includes>
                <include>*.bat</include>
            </includes>
            <lineEnding>crlf</lineEnding>
        </fileSet>
        <fileSet>
            <outputDirectory>tools</outputDirectory>
            <directory>${project.basedir}/src/main/assemblies/tools</directory>
            <excludes>
                <exclude>*.bat</exclude>
            </excludes>
            <lineEnding>lf</lineEnding>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory />
            <directory>${project.basedir}/../scim-core/src/main/resources/com/unboundid/scim</directory>
            <includes>
                <include>schema/*.xsd</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>lib</outputDirectory>
            <directory>${project.basedir}/../scim-core/src/main/resources/com/unboundid/scim</directory>
            <includes>
                <include>schema/*.xsd</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
        </dependencySet>
    </dependencySets>
</assembly>